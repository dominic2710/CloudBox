<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudBox.Photo.Views.AppTitleView"
             xmlns:fontHelper="clr-namespace:CloudBox.Photo.Helpers">
    <Grid Margin="10,10,10,10">
        <Image Source="cloud_photo_logo.jpg" HeightRequest="48" Margin="0,0,10,0"
               VerticalOptions="Center"/>

        <ImageButton HorizontalOptions="End">
            <ImageButton.Source>
                <FontImageSource FontFamily="IconFontTypes" Glyph="{x:Static fontHelper:IconFont.Account_circle}" Color="Gray"/>
            </ImageButton.Source>
        </ImageButton>
    </Grid>
</ContentView>
